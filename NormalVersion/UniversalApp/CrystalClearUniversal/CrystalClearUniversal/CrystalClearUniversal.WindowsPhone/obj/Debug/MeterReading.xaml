<Page
    x:Class="CrystalClearUniversal.MeterReading"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CrystalClearUniversal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
	<Page.Background>
		<ImageBrush Stretch="Fill" ImageSource="Assets/water.jpg"/>
	</Page.Background>

    <Grid x:Name="LayoutRoot">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Panel -->
        <StackPanel Grid.Row="0" Margin="19,0,19,56.667" Background="#FF2A3238">
            <TextBlock Text="CRYSTAL CLEAR" Style="{ThemeResource TitleTextBlockStyle}" Margin="10,12,-0.333,0" Foreground="#FFF0DDDD"/>
            <TextBlock Text="meter reading" Margin="10,-6.5,-0.333,26.5" Style="{ThemeResource HeaderTextBlockStyle}" CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}" Foreground="#FFE6D0D0" Height="89"/>
        </StackPanel>

        <!--TODO: Content should be placed within the following grid-->
        <Grid Grid.Row="1" x:Name="ContentRoot" Margin="19,9.5,19,0">
        	<Grid.ColumnDefinitions>
        		<ColumnDefinition/>
        		<ColumnDefinition/>
        	</Grid.ColumnDefinitions>

            <StackPanel Name="myStackPanel" Margin="0,-103,-0.333,10" Background="#FF96A1D3" Grid.ColumnSpan="2" >

                <TextBlock HorizontalAlignment="Left"
                           TextWrapping="Wrap"
                           Text="Payment Options"
                           VerticalAlignment="Top"
                           FontSize="24"
                           Margin="0,20,-0.333,0" Foreground="Black" TextAlignment="Center" Width="362"/>

                <RadioButton x:ConnectionId='1' Content="50% - Two a year"
                             Tag="0.5"
                             GroupName="percentRadio"
                             Name="annualRadioButton" 
                                                       Foreground="Black" BorderBrush="Black" Width="261" Margin="91,0,0,0"/>

                <RadioButton x:ConnectionId='2' Content="25% - Four a year"
                             Tag="0.25"
                             Name="quarterRadioButton"
                             GroupName="percentRadio"
                                                       Foreground="Black" BorderBrush="Black" Margin="91,0,-0.333,0" Width="271"/>
                <TextBlock
                    HorizontalAlignment="Left"
                    TextWrapping="Wrap"
                    Text="Litre Amount"
                    FontSize="24" Foreground="Black" Width="165" Margin="91,0,0,0"/>
                <TextBox x:ConnectionId='3' x:Name="billAmountTextBox"
                         Text="0"
                         Visibility="Visible"
                         TextAlignment="Right"
                         HorizontalAlignment="Left"
                         TextWrapping="Wrap"
                         VerticalAlignment="Top"
                         InputScope="Number"
                         Width="190"
                         FontSize="24"
                                                            
                                                                    
                                                           BorderBrush="{x:Null}" Margin="88,0,0,0"/>

                <!--<TextBlock HorizontalAlignment="Left"
                           TextWrapping="Wrap"
                           Text="Amount per year:"
                           FontSize="24"
                           />

                <TextBlock Name="amountToPayTextBlock"
                           HorizontalAlignment="Left"
                           TextWrapping="Wrap"
                           VerticalAlignment="Top"
                           Text="€0.00"
                           FontSize="36"/>-->

                <TextBlock HorizontalAlignment="Left"
                           TextWrapping="Wrap"
                           Text="Total Bill:"
                           FontSize="24" Foreground="Black"
                           />

                <TextBlock Name="totalTextBlock"
                           HorizontalAlignment="Left"
                           TextWrapping="Wrap"
                           VerticalAlignment="Top"
                           Text="€0.00"
                           FontSize="36" Foreground="Black"/>

               
                <Button x:ConnectionId='4' Content="Save"                  HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="#FF8DA2AA" Foreground="Black" BorderBrush="#FF6E6666" Width="138"/>
                <Button x:ConnectionId='5' Content="View Bills"                       Foreground="Black" BorderBrush="#FF7A7575" Background="#FF8DA2AA" Width="138"/>
                <Button x:ConnectionId='6' Content="Back"                  Foreground="Black" BorderBrush="#FF7A7575" Background="#FF8DA2AA" Width="138"/>
            </StackPanel>


        </Grid>
    </Grid>
</Page>

