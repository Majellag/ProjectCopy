<Page
    x:Name="pageRoot"
    x:Class="CrystalClearUniversal.MeterReading"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CrystalClearUniversal"
    xmlns:common="using:CrystalClearUniversal.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">Crystal Clear - Meter Reading</x:String>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/water.jpg"/>
        </Grid.Background>
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Name="myStackPanel" Grid.Row="1" Margin="50,0,61,43" Background="#FF96A1D3" >

            <TextBlock HorizontalAlignment="Left"
                           TextWrapping="Wrap"
                           VerticalAlignment="Top"
                           FontSize="24"
                           Margin="112,20,0,0" 
                           Width="421"
                       Foreground="Black">
            	<Run Text="Please choose a Payment Optio"/>
            	<Run Text="n"/>
            </TextBlock>

            <RadioButton x:ConnectionId='1' Content="50% - Two a year"
                             Tag="0.5"
                             GroupName="percentRadio"
                             x:Name="annualRadioButton" 
                                                       Foreground="Black" Margin="109,0,0,0"/>

            <RadioButton x:ConnectionId='2' Content="25% - Four a year"
                             Tag="0.25"
                             x:Name="quarterRadioButton"
                             GroupName="percentRadio"
                                                       Foreground="Black" Margin="109,0,0,0"/>
            <TextBlock
                    HorizontalAlignment="Left"
                Foreground="Black"
                    TextWrapping="Wrap"
                    Text="Litre Amount"
                    FontSize="24" Margin="112,0,0,0" Width="198"
                />
            <TextBox x:ConnectionId='3' x:Name="billAmountTextBox"
                         PlaceholderText="0"
                         TextAlignment="Right"
                         HorizontalAlignment="Left"
                         TextWrapping="Wrap"
                         VerticalAlignment="Top"
                         InputScope="Number"
                         Width="217"
                         FontSize="24"
                         
                                                                    
                          Margin="112,0,0,0" Height="43"/>
            <TextBlock HorizontalAlignment="Left"
            	TextWrapping="Wrap"
            	Text="Total Bill:"
            	FontSize="24" Width="166" Margin="112,0,0,0"
                       Foreground="Black"    />

            <!--<TextBlock HorizontalAlignment="Left"
                           TextWrapping="Wrap"
                           Text="Amount per year:"
                           FontSize="24"
                           />

                <TextBlock Name="amountToPayTextBlock"
                           HorizontalAlignment="Left"
                           TextWrapping="Wrap"
                           VerticalAlignment="Top"
                           Text="€0.00"
                           FontSize="36"/>-->

            <TextBlock x:Name="totalTextBlock"
                       Foreground="Black"
                           HorizontalAlignment="Left"
                           TextWrapping="Wrap"
                           VerticalAlignment="Top"
                           Text="€0.00"
                           FontSize="36" Width="182" Margin="112,0,0,0"/>
            <Button x:ConnectionId='4' Foreground="Black" Content="Save"                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="109,0,913,0" BorderBrush="#FFEAEAEA" Background="#FF8DA2AA" FontWeight="Bold" Height="40"/>
            <Button x:ConnectionId='5' Foreground="Black" Content="View History"                           HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="109,0,913,0" BorderBrush="#FFEAEAEA" FontWeight="Bold" Background="#FF8DA2AA"/>
            <ScrollViewer Height="280" Margin="0,0,708,0"/>
            <TextBlock  VerticalAlignment="Top" FontSize="20" Foreground="Black"  x:Name="TextBlock1" Height="299" Margin="88,0,786,0"/>
            <TextBlock TextWrapping="Wrap" Text="Please choose a payment option first by clicking the radio button" Height="42" Foreground="#FF060606" Margin="0,0,840,0"/>



        </StackPanel>

        <!-- Back button and page title -->
        <Grid Background="#FF136583">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" Margin="39,59,39,0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                        VerticalAlignment="Top"
                        AutomationProperties.Name="Back"
                        AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button" Foreground="#FFF5F1F1" BorderBrush="Black"/>
            <TextBlock x:Name="pageTitle" Text="Meter Reading" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1" 
                        IsHitTestVisible="false" TextWrapping="NoWrap" VerticalAlignment="Bottom" Margin="0,0,30,40" Foreground="#FFF1E1E1" FontWeight="Bold"/>
        </Grid>
        <Image Source="Assets/meter.png" HorizontalAlignment="Left" Height="472" Margin="663,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="461" RequestedTheme="Dark"/>
    </Grid>
</Page>

