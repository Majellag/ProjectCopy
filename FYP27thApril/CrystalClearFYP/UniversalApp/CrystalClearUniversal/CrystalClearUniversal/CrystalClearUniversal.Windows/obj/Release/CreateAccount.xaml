<Page
    x:Class="CrystalClearUniversal.CreateAccount"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CrystalClearUniversal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
	<Page.Resources>
<!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
		<x:String x:Key="AppName">Crystal Clear - Meter Reading</x:String>
	</Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:/Assets/water.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid Background="#FF136583" HorizontalAlignment="Left" Height="140" VerticalAlignment="Top" Width="1366">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="pageTitle" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1" 
                        IsHitTestVisible="false" TextWrapping="NoWrap" VerticalAlignment="Bottom" Margin="0,0,30,40" Foreground="White"/>
            <TextBlock x:Name="pageTitle_Copy" Text="Create Account" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1" 
            	IsHitTestVisible="false" TextWrapping="NoWrap" VerticalAlignment="Bottom" Margin="35,0,311,40" Foreground="#FFF1E1E1" FontWeight="Bold"/>



        </Grid>




        <Grid x:Name="ContentPanel" Margin="50,140,71,53" Background="#FF96A1D3">
            <Grid.RowDefinitions>
                <RowDefinition Height="0*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="45"/>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="23*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Family Name" FontSize="30" Margin="0,6,0,329" Name="FamilyName" Grid.ColumnSpan="2" Grid.Row="1" Foreground="Black" HorizontalAlignment="Right" Width="1198" Grid.Column="1"/>
            <TextBox x:Name="familyNmeTxtBx" HorizontalAlignment="Left" 
                    Height="43" TextWrapping="Wrap" Margin="2,45,0,0"
                    Text="" VerticalAlignment="Top" Width="415" Grid.ColumnSpan="2" Grid.Row="1" Grid.Column="1" />
            <TextBlock Text="Number of Residents" FontSize="30" Margin="2,105,-3,241" Name="NoOfResidents" Grid.ColumnSpan="2" Grid.Row="1" Foreground="Black" Grid.Column="1"/>
            <TextBox x:Name="numberTxtBx" HorizontalAlignment="Left" 
                    Height="43" TextWrapping="Wrap" Margin="2,140,0,0"
                    Text="" VerticalAlignment="Top" Width="415" Grid.ColumnSpan="2" Grid.Row="1" Grid.Column="1"/>
            <TextBlock Margin="2,200,8,317" FontSize="30" Name="Email" Grid.ColumnSpan="2" Grid.Row="1" Foreground="Black" Grid.Column="1">
            	<Run Text="Email"/>
            	<Run Text=" Address"/>
            </TextBlock>
            <Button x:ConnectionId='1' HorizontalAlignment="Left"
                    FontSize="26"
                    Margin="226,42,0,0" 
                    Content="Add Account"                          VerticalAlignment="Top" Width="351" Grid.Column="2" Height="61" Grid.Row="1" Foreground="Black" BorderBrush="#FFEAEAEA" Background="#FF8DA2AA" FontWeight="Bold"/>
            <TextBox x:Name="emailTxtBx" HorizontalAlignment="Left" 
                    Height="43" TextWrapping="Wrap" Margin="2,235,0,0"
                    Text="" VerticalAlignment="Top" Width="415"  Grid.ColumnSpan="2" Grid.Row="1" Grid.Column="1"/>
            <Button x:ConnectionId='2' Name="viewAccBtn" FontSize="26" Content="View Account" HorizontalAlignment="Center" Margin="226,137,343,0" VerticalAlignment="Top" Width="351" Height="61"                          Grid.Column="2" Grid.Row="1" Foreground="Black" BorderBrush="#FFEAEAEA" Background="#FF8DA2AA" FontWeight="Bold" />
            <StackPanel Grid.ColumnSpan="3" Margin="0,311,10,2" Grid.Row="1">
                <TextBlock VerticalAlignment="Top" FontSize="40" x:Name="TextBlock1" Height="254" Margin="50,0,775,0" Foreground="#FF0E1011"/>
            </StackPanel>
            <Button x:ConnectionId='3' x:Name="MeterReadingBtn" FontSize="26" Content="Go to Meter Reading" HorizontalAlignment="Center" Margin="226,232,343,0" VerticalAlignment="Top" Width="351" Height="58"                                Grid.Column="2" Grid.Row="1" Foreground="Black" BorderBrush="#FFEAEAEA" Background="#FF8DA2AA" FontWeight="Bold" />
            <Button x:ConnectionId='4' x:Name="backButton" Margin="0,-76,0,0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
            	Style="{StaticResource NavigationBackButtonNormalStyle}"
            	VerticalAlignment="Top"
            	AutomationProperties.Name="Back"
            	AutomationProperties.AutomationId="BackButton"
            	AutomationProperties.ItemType="Navigation Button"                          Background="#FF4B4040" BorderBrush="#FF272222" RenderTransformOrigin="0.634,1.024" Height="41" Width="41"/>

            <StackPanel Grid.Row="1" Margin="0,90,280,495" Background="#FF96A1D3" Grid.Column="1">
                <TextBlock Text="CRYSTAL CLEAR" Style="{ThemeResource TitleTextBlockStyle}" Margin="154,12,0,0" Foreground="Black" Height="26"/>
                <TextBlock Text="create account" Margin="154,-6.5,0,26.5" Style="{ThemeResource HeaderTextBlockStyle}" Foreground="White" />
            </StackPanel>

        </Grid>

    </Grid>
</Page>

